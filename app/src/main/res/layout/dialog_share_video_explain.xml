<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_dialog"
    android:gravity=""
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/video_share_explain_dialog_title"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/share_video_explain_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="center"
            android:src="@mipmap/share_video_explain_close" />
    </FrameLayout>

    <TextView
        android:id="@+id/share_video_explain_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="#333333"
        android:text="@string/video_share_explain_dialog_content" />
</LinearLayout>