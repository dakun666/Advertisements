<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/user_center_shared_list_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        app:tabIndicator="@drawable/tag_user_center_shared_list_tab_indicator"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/dp_4"
        app:tabMinWidth="@dimen/dp_50"
        app:tabMode="fixed"
        app:tabPaddingEnd="@dimen/dp_4"
        app:tabPaddingStart="@dimen/dp_4"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/qmui_config_color_white"
        app:tabTextColor="#B1C7D4" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/user_center_shared_list_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>