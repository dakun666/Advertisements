<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_153">

            <ImageView
                android:id="@+id/share_video_item_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/share_video_item_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#6282EC"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_4"
                android:textColor="@color/qmui_config_color_white"
                android:textSize="13sp"
                tools:text="@string/video_share_item_commission" />

            <ImageView
                android:id="@+id/share_video_item_play"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:layout_gravity="center"
                android:src="@mipmap/share_video_item_play" />
        </FrameLayout>

        <TextView
            android:id="@+id/share_video_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="#333333"
            android:textSize="13sp"
            tools:text="不要以“为别人考虑”做理由，其实丢弃了“舍我其谁”的使命感" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_7">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/sp_18"
                android:src="@mipmap/video_share_item_title_tag" />

            <TextView
                android:id="@+id/share_video_item_share_surplus_times"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                tools:text="@string/video_share_item_share_surplus_times"
                tools:textColor="@color/default_background_color" />

            <ImageView
                android:id="@+id/video_share_item_more"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/logo_more" />

            <ImageView
                android:id="@+id/video_share_item_share"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@mipmap/video_share_item_share" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>