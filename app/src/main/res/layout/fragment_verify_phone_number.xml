<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/verify_phone_number_fragment_back"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:scaleType="center"
        android:src="@mipmap/login_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        android:text="@string/verify_phone_number"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/verify_phone_number_edit"
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/bg_verify_phone_number_edit"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/phone_number_verify"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_login_type"
        android:text="@string/verify"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="15sp" />
</LinearLayout>